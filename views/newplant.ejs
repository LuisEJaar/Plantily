<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- My Styles -->
    <link rel="stylesheet" href="/styles/normalize.css">
    <link rel="stylesheet" href="/styles/style.css">

    <!-- Sourced Styles -->

    <!-- Header Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script&display=swap" rel="stylesheet">
    
    <title>Plantly Home Page</title>
</head>
<body>
   <header>
        <h1>Plantly</h1>
   </header>
   <section class="plantSpace">
        <!-- Generate dynamically based on plants in db -->
        <article id="addPlant" class="hidden">
            <div>Tell us about your plant!</div>
            <form action="/plants" id="addplantForm" method="post">
                <fieldset>
                    <legend>Plant Facts</legend>
                    <label for="plant_name">Name:</label>
                    <input type="text" id="plant_name" placeholder="name" name="name" required>
                    <br>
                    <label for="plant_date">Planted on:</label>
                    <input type="date" id="plant_date" placeholder="plant_date" name="plant_date">
                    <br>
                    <label for="plant_type">Plant Type:</label>
                    <input type="text" id="plant_type" placeholder="type" name="type">
                    <br>
                    <label for="plant_height">Plant Height:</label>
                    <input type="number" id="plant_height" placeholder="height" name="height">
                    <!-- <input type="file" placeholder="picture" name="picture"> -->
                </fieldset>
                <fieldset>
                    <legend>Environment & Watering</legend>
                    <label for="sun">Sun Exposure</label>
                    <select name="sun_exposure" id="sun">
                        <option value="">Choose</option>
                        <option value="Full Sun">Full Sun</option>
                        <option value="Light Shade">Light Shade</option>
                        <option value="Partial Shade">Partial Shade</option>
                        <option value="Full Shade">Full Shade</option>
                        <option value="Dense Shade">Dense Shade</option>
                    </select>
                </br>
                    <label for="watering_schedule">Watering Schedule</label>
                    <select name="watering_schedule" id="watering">
                        <option value="">Choose</option>
                        <option value="Daily">Daily</option>
                        <option value="Bi-Daily">Bi-daily</option>
                        <option value="Weekly">Weekly</option>
                        <option value="Bi-Weekly">Bi-Weekly</option>
                    </select>
               </fieldset>
               <button type="submit">Add to my garden!</button>
            </form>
        </article>
   </section>
   <!-- Generic Footer -->
   <footer>
        <article id= "scheduleOverlay" class="navExtension hidden">
            <!-- Overlay for Schedule -->
            <p>Update Coming!</p>
        </article>
        <article id= "addOverlay" class="navExtension hidden">
            <!-- Overlay for add -->
            <p>What would you like to add?</p>
            <div class="extimgcontainer">
                <img id="addPlantNav" class="extensionimages" src="./assets/nav/Add Button/plant.png" alt="Plant">
                <img id="addDiaryNav" class="extensionimages" src="./assets/nav/Add Button/diary.png" alt="Diary">
                <img id="addEventNav" class="extensionimages" src="./assets/nav/Add Button/event.png" alt="Event">
            </div>
        </article>
        <article id= "contactOverlay" class="navExtension hidden">
            <!-- Overlay for contact -->
            <p>We would love to hear from you!</p>
            <div class="extimgcontainer">
                <a href="#"><img class="extensionimages" src="./assets/nav/Contact Button/social-media.png" alt="social media"></a>
                <a href="#"><img class="extensionimages" src="./assets/nav/Contact Button/telephone-call.png" alt="call"></a>
                <a href="#"><img class="extensionimages" src="./assets/nav/Contact Button/email.png" alt="email"></a>
            </div>
        </article>
        <nav>
            <img id="garden" src="./assets/nav/mygarden.png" alt="my garden">
            <img class="navButton" id="schedule" src="./assets/nav/schedule.png" alt="schedule">
            <img class="navButton" id="add" src="./assets/nav/add_circle.png" alt="add circle">
            <a href="edu.html">
                <img id="edu" src="./assets/nav/magistrate.png" alt="education">
            </a>
            <img class="navButton" id= "contact"src="./assets/nav/contact.png" alt="contact us">
        </nav>
   </footer> 
   <script src="/js/main.js"></script>
</body>
</html>