<div class="container indexTop">
    <div class="stardewBorder p-3" >
        <h2>Search Areas</h2>
        <form action="/areas" method="GET">
            <label>Name</label>
            <input type="text" name="name" value="<%= searchOptions.name%>">
            <button class="btn btn-success" type="submit">Search</button>
        </form>
    </div>
    <br>
    <% areas.forEach(area => {%>
        <div><%= area.name %></div>
        <a href="/areas/<%= area.id %>">View</a>
        <a href="/areas/<%= area.id %>/edit">Edit</a>
        <%- include('../partials/deleteForm', 
            {url: `/areas/${area.id}`})
        %>
    <% }) %>
</div>


