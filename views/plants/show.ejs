<div class="pt-5 d-flex flex-column align-items-center">
    <div id="plantProfile" class="p-3 stardewBorder d-flex flex-column">
        <div class="d-md-flex">
            <div class="">
                <div id="plantPicture" class="mb-3 card bg-dark stardewBorder">
                    <img class="" src="<%= plant.coverImagePath %>" alt="plant cover">
                </div>
                <div class="d-flex flex-column justify-content-center">
                    <span class="card-text text-center"><%= plant.plantName %></span>
                    <h5 class="card-title">Description:</h5>
                    <p class="card-text"><%= plant.description %></p>
                </div>
            </div>
            <section class="justify-content-center flex-row ms-3">
                <div>
                    <div class="card stardewBorder">
                        <ul class="list-group list-group-flush card bg-dark text-light">
                            <li class="list-group-item card bg-dark text-light d-flex justify-content-between flex-sm-column flex-md-row"><span class="pe-5">Planted on:</span><span class="text-md-right text-center"><%= plant.plantedDate.toDateString() %></span> </li>
                            <li class="list-group-item card bg-dark text-light d-flex justify-content-between flex-column flex-md-row"><span>Height(cm): </span><span class="text-center"><%= plant.height %></span></li>
                            <li class="list-group-item card bg-dark text-light d-flex justify-content-between flex-column flex-md-row"><span>Type: </span><span class="text-center"><%= plant.type %></span></li>
                            <li class="list-group-item card bg-dark text-light d-flex justify-content-between flex-column flex-md-row"><span>Water Int(days):</span><span class="text-center"><%= plant.waterInt %></span></li>
                            <li class="list-group-item card bg-dark text-light d-flex justify-content-between flex-column flex-md-row"><span>Water Amt(cups):</span><span class="text-center"><%= plant.waterAmt %></span></li>
                            <li class="list-group-item card bg-dark text-light d-flex justify-content-between flex-column flex-md-row"><span>Sun: </span><span class="text-center"><%= plant.sun %></span></li>
                            <li class="list-group-item card bg-dark text-light d-flex justify-content-between flex-column flex-md-row"><span>Pot Size(cm): </span><span class="text-center"><%= plant.potSize %></span> </li>
                            <li class="list-group-item card bg-dark text-light d-flex justify-content-between flex-column flex-md-row"><span>Area: </span><span class="text-center"><%= plant.area.name %></span></li>
                        </ul>
                    </div>
                </div>
            </section>
        </div>
        <div class="container mt-4 p-3 d-flex justify-content-center">
            <a class="btn me-3 btn-success btn-lg" href="/plants/<%= plant.id %>/edit">Edit</a>
            <a class="btn me-3 btn-success btn-lg" href="/areas/<%= plant.area.id %>">View Area</a>
            <%- include('../partials/deleteForm', { url: `/plants/${plant.id}` })%>
        </div>
    </div>
    <!-- Temp for Diary -->
    <div class="mt-3 p-3 stardewBorder d-flex justify-content-between">
        <h2 class="me-3">New Diary Entry:</h2>
        <button class="btn btn-success btn-lg" data-bs-toggle="modal" data-bs-target="#diary"><i class="bi-plus-circle"></i></button>
    </div>
    <div class="m-3 p-3 container diaryIcons row stardewBorder">
        <div class="col-md-4">
            <img src="/assets/diary/potSize.png" alt="Pot Size Change">
            <span class="ms-1">Pot Size</span>
        </div>
        <div class="col-md-4">
            <img src="/assets/diary/pests.png" alt="Pests seen">
            <span class="ms-1">Pests</span>
        </div>
        <div class="col-md-4">
            <img src="/assets/diary/water-drop.png" alt="Water Ammount Change">
            <span class="ms-1">Water Amt</span>
        </div>
        <div class="col-md-4">
            <img src="/assets/diary/clock.png" alt="Water Interval Change">
            <span class="ms-1">Water Int</span>
        </div>
        <div class="col-md-4">
            <img src="/assets/diary/height.png" alt="Height Change">
            <span class="ms-1">Height</span>
        </div>
        <div class="col-md-4">
            <img src="/assets/diary/sun.png" alt="Sun Change">
            <span class="ms-1">Sun</span>
        </div>
        <div class="col-md-4">
            <img src="/assets/diary/plant-pot.png" alt="Repotted">
            <span class="ms-1">Repotted</span>
        </div>
        <div class="col-md-4">
            <img src="/assets/diary/fertilizer.png" alt="Fertilized">
            <span class="ms-1">Fertilized</span>
        </div>
        <div class="col-md-4">
            <img src="/assets/diary/spray.png" alt="Pests Treated">
            <span class="ms-1">Pests Treated</span>
        </div>
        <div class="col-md-4">
            <img src="/assets/diary/band-aid.png" alt="Trauma">
            <span class="ms-1">Trauma</span>
        </div>
    </div>
    <div class="container mt-4">  
        <% if(diariesByPlant.length > 0) { %>
            <h2>Diary Entries:</h2>
            <% diariesByPlant.forEach(diary => {%>
                <div class="stardewBorder mb-5">
                    <div class="mb-2 d-sm-flex justify-content-centerdiaryUpper pb-2">
                        <div id="diaryPicture" class="ms-auto ms-sm-0 me-auto me-sm-0 bg-dark d-flex justify-content-center stardewBorder">
                            <% if(diary.coverImagePath) {%>
                                <img src="<%= diary.coverImagePath %>">
                            <%} %>
                        </div>
                        <div class="ms-4 d-flex flex-column justify-content-between ml-5">
                            <div class="diaryTextEntries">
                                <div class="card-body">
                                    <h5 class="h4">Title: <%= diary.diaryTitle %></h5>
                                    <span class="h5">Date: <%= diary.diaryDate == null ? '' : diary.diaryDate.toISOString().split('T')[0] %></p>
                                </div>
                                <div class="d-flex flex-column mb-3">
                                    <ul class="list-group list-group-flush h5">
                                        <% if(diary.height) {%>
                                            <span>Height: <%= diary.height %></span>
                                        <%}%>
                                        <% if(diary.sun) {%>
                                            <span>Sun: <%= diary.sun %></span>
                                        <%}%>
                                        <% if(diary.potSize) {%>
                                            <span>Pot Size: <%= diary.potSize %></span>
                                        <%}%>
                                        <% if(diary.diaryText) {%>
                                            <span>Notes: <%= diary.diaryText %></span>
                                        <%}%>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="ms-auto d-flex flex-sm-column justify-content-around pe-1">
                            <a class="btn btn-success btn-lg" href="/diaries/<%= diary.id %>/edit">Edit</a>
                            <%- include('../partials/deleteForm', { url: `/diaries/${diary.id}` })%>
                        </div>    
                    </div>
                    <div class="diaryIcons ps-3 pb-2 row">
                        <div class="col">
                            <% if(diary.potSizeChange) {%>
                                <img src="/assets/diary/potSize.png" alt="Pot Size Change">
                            <%}%>
                        </div>
                        <div class="col">
                            <% if(diary.pestsSighted) {%>
                                <img src="/assets/diary/pests.png" alt="Pests seen">
                            <%}%>
                        </div>
                        <div class="col">
                            <% if(diary.waterAmtChange) {%>
                                <img src="/assets/diary/water-drop.png" alt="Water Ammount Change">
                            <%}%>
                        </div>
                        <div class="col">
                            <% if(diary.waterIntChange) {%>
                                <img src="/assets/diary/clock.png" alt="Water Interval Change">
                            <%}%>
                        </div>
                        <div class="col">
                            <% if(diary.heightChange) {%>
                                <img src="/assets/diary/height.png" alt="Height Change">
                            <%}%>
                        </div>
                        <div class="col">
                            <% if(diary.sunChange) {%>
                                <img src="/assets/diary/sun.png" alt="Sun Change">
                            <%}%>
                        </div>
                        <div class="col">
                            <% if(diary.repotted) {%>
                                <img src="/assets/diary/plant-pot.png" alt="Repotted">
                            <%}%>
                        </div>
                        <div class="col">
                            <% if(diary.fertilized) {%>
                                <img src="/assets/diary/fertilizer.png" alt="Fertilized">
                            <%}%>
                        </div>
                        <div class="col">
                            <% if(diary.pestsTreated) {%>
                                <img src="/assets/diary/spray.png" alt="Pests Treated">
                            <%}%>
                        </div>
                        <div class="col">
                            <% if(diary.trauma) {%>
                                <img src="/assets/diary/band-aid.png" alt="Trauma">
                            <%}%>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } %> 
    </div>  
</div>

<!-- Modal -->
<div class=" modal fade" id="diary" tabindex="-1" aria-labelledby="diaryLabel" aria-hidden="true">
    <div class="modal-dialog">
    <div class="modal-content stardewBorder">
        <div class="modal-header">
        <h5 class="modal-title" id="diaryLabel">Diary Content:</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
        <form action="/diaries" method="POST">
            <input type="hidden" value="<%= plant.id%>" name="plant">
            <div class="mb-3">
            <label for="diaryTitle" class="col-form-label">Title:</label>
            <input required type="text" class="form-control" id="diaryTitle" name="diaryTitle">
            </div>
                <label class="col-md-2 col-form-label" for="diaryDate">Date:</label>
                <input required type="date" class="form-control" name="diaryDate">
            <div class="mb-3">
                <label for="diaryText" class="col-form-label">Entry:</label>
                <textarea class="form-control" name="diaryText" id="diaryText"></textarea>
            </div>
            <fieldset>
                <legend class="h1">Has anything Changed?</legend>
                <div class="mb-3 ">
                    <div class="form-check form-switch">
                        <input type="checkbox" class="form-check-input" id="height-Change" name="heightChange" value="yes">
                        <label for="height-Change" class="form-check-label">Height?</label>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="height" class="col-form-label">Height (cm):</label>
                    <input disabled type="number" class="form-control" id="height" placeholder="<%= plant.height %>">
                </div>
                <div class="mb-3 ">
                    <div class="form-check form-switch">
                        <input type="checkbox" class="form-check-input" id="waterInt-Change" name="waterIntChange" value="yes">
                        <label for="waterInt-Change" class="form-check-label">Watering Interval?</label>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="waterInt" class="col-form-label">Interval (days):</label>
                    <input disabled type="number" class="form-control" id="waterInt" placeholder="<%= plant.waterInt %>">
                </div>
                <div class="mb-3">
                    <div class="form-check form-switch">
                        <input type="checkbox" class="form-check-input" id="waterAmt-Change" name="waterAmtChange" value="yes">
                        <label for="waterAmt-Change" class="form-check-label">Watering Amt?</label>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="waterAmt" class="col-form-label">Water (cups):</label>
                    <input disabled type="number" class="form-control" id="waterAmt" placeholder="<%= plant.waterAmt %>">
                </div>
                <div class="mb-3">
                    <div class="form-check form-switch">
                        <input type="checkbox" class="form-check-input" id="sun-Change" name="sunChange" value="yes">
                        <label for="sun-Change" class="form-check-label">Sun?</label>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="sun" class="col-form-label">Sun:</label>
                    <select disabled class="form-control" id="sun" value="<%= plant.sun %>">
                        <option value="N/A">N/A</option>
                        <option value="full-sun">Full-sun</option>
                        <option value="light-shade">Light-shade</option>
                        <option value="partial-shade">Partial-shade</option>
                        <option value="full-shade">Full-shade</option>
                        <option value="dense-shade">Dense-shade</option>
                    </select>
                </div>
                <div class="mb-3">
                    <div class="form-check form-switch">
                        <input type="checkbox" class="form-check-input" id="potSize-Change" name="potSizeChange" value="yes">
                        <label for="potSize-Change" class="form-check-label">Pot Size?</label>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="potSize" class="col-form-label">Pot size:</label>
                    <input disabled type="number" class="form-control" id="potSize" value="<%= plant.potSize %>">
                </div>
                <div class="mb-3">
                    <div class="form-check form-switch">
                        <input type="checkbox" class="form-check-input" id="pestStatus-Change" name="pestsSighted" value="yes">
                        <label for="pestStatus-Change" class="form-check-label">Pests Sighted?</label>
                    </div>
                </div>
                
            </fieldset>
            <fieldset>
                <legend>Did any of the following happen:</legend>
                <div class="form-check form-switch">
                    <input type="checkbox" class="form-check-input" name="repotted" value="yes" id="repotted">
                    <label for="repotted" class="form-check-label">Repotted</label>
                </div>
                <div class="form-check form-switch">
                    <input type="checkbox" class="form-check-input" name="fertilized" value="yes" id="fertilized">
                    <label for="fertilized" class="form-check-label">Fertilized</label>
                </div>
                <div class="form-check form-switch">
                    <input type="checkbox" class="form-check-input" value="yes" name="pestsTreated" id="pestsTreated">
                    <label for="pestsTreated" class="form-check-label">Pests Treated</label>
                </div>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" value="yes" name="trauma" id="trauma">
                    <label for="trauma" class="form-check-label">Trauma</label>
                </div>
            </fieldset>
            <fieldset>
                <div class="form-group">
                    <label for="cover">Picture:</label>
                    <div class="ps-5">
                        <input type="file" name="cover" class="ms-3 filepond">
                    </div>
                </div>
            </fieldset>
            <div class="modal-footer d-flex justify-content-center">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Add to Diary</button>
            </div>
        </form>
        </div>
    </div>
    </div>
</div>
<!-- Modal -->