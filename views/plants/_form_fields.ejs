<div>
    <label for="title">Title</label>
    <input type="text" name="title" value='<%= plant.title %>'>
</div> 
<div>
    <label for="area">Area</label>
    <select name="area" id="area">
        <% areas.forEach(area => { %>
            <% if(area.id === plant.area) { %> 
                <option selected label="<%= area.name %>" value="<%= area.id %>"><%= area %></option>
            <%} else { %>
            <option label="<%= area.name %>" value="<%= area.id %>"><%= area %></option>
            <% } %>
        <% }) %>
    </select>
</div>
<div>
    <label for="publishDate">Publish Date</label>
    <input type="date" name="publishDate" value='<%= plant.publishDate == null ? '' : plant.publishDate.toISOString().split('T')[0] %>'>
</div>
<div>
    <label for="pageCount">Page Count</label>
    <input type="number" name="pageCount" min='1' value='<%= plant.pageCount %>'>
</div>
<div>
    <label for="cover">Cover</label>
    <input type="file" name="cover" class="filepond">
</div>
<div>
    <label for="description">Description</label>
    <textarea  name="description"><%= plant.description%></textarea>
</div>


